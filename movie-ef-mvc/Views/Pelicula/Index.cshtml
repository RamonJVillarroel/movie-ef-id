@model IEnumerable<movie_ef_mvc.Models.Pelicula>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de peliculas</h1>

<p>
    <a asp-action="Create">Crear Pelicula</a>
</p>
<table id="peliculasTable" class="table table-striped">
    <thead>
        <tr>
            <th>
                Portada
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plataforma)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr> 
            <td>
                <img src="@item.PosterUrlPortada" height="50"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
 
            <td>
                @Html.DisplayFor(modelItem => item.Plataforma.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero.Descripcion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#peliculasTable').DataTable({
                // configuración básica - puedes ajustar según necesites
                "paging": true,
                "searching": true,
                "ordering": true,
                "pageLength": 5,
                "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "Todos"]],
                "columnDefs": [
                    { "orderable": false, "targets": 0 }, // Imagen no ordenable
                    { "orderable": false, "targets": 4 }  // Acciones no ordenables
                ],
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json"
                }
            });
        });
    </script>
}
